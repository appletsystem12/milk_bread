<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".All_milk">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5sp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="15sp"
                android:layout_height="260sp">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="280sp"
                    app:cardCornerRadius="10sp"
                    android:layout_weight="1"
                    android:orientation="vertical"

                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="120sp"
                            android:src="@drawable/milk"
                            android:id="@+id/verka"
                            android:layout_marginStart="15sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Verka"
                            android:layout_marginTop="15sp"
                            android:layout_centerInParent="true"
                            android:textSize="10sp"
                            android:layout_marginStart="5sp"
                            android:id="@+id/text1"
                            android:layout_below="@+id/verka"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Life UHT double Toned Milk"
                            android:textColor="#D71149"
                            android:layout_marginTop="5sp"
                            android:layout_centerInParent="true"
                            android:textStyle="bold"
                            android:layout_marginStart="5sp"
                            android:id="@+id/text2"
                            android:textSize="10sp"
                            android:layout_below="@+id/text1"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MRP RS 28"
                            android:layout_marginTop="5sp"
                            android:textSize="10sp"
                            android:layout_centerInParent="true"
                            android:textStyle="bold"
                            android:layout_below="@+id/text2"
                            android:id="@+id/price"
                            />
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="20sp"
                            android:textColor="#fff"
                            android:background="@drawable/custom_button"
                            android:textStyle="bold"
                            android:text="Buy"
                            android:layout_centerInParent="true"
                            android:id="@+id/buy"
                            android:layout_marginTop="15sp"
                            android:textSize="10sp"
                            android:layout_below="@+id/price"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="SUBSCRIBE"
                            android:textColor="#D71449"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:layout_centerInParent="true"
                            android:layout_below="@+id/buy"
                            android:layout_marginTop="15sp"/>






                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="280sp"
                    android:layout_marginLeft="10sp"
                    app:cardCornerRadius="10sp"
                    android:layout_weight="1"
                    android:orientation="vertical"

                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="120sp"
                            android:src="@drawable/toned"
                            android:id="@+id/toned"
                            android:layout_marginStart="15sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mother Dairy"
                            android:layout_marginTop="15sp"
                            android:layout_centerInParent="true"
                            android:textSize="10sp"
                            android:layout_marginStart="5sp"
                            android:id="@+id/text4"
                            android:layout_below="@+id/toned"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mother dairy Toned Milk"
                            android:textColor="#D71149"
                            android:layout_marginTop="5sp"
                            android:layout_centerInParent="true"
                            android:textStyle="bold"
                            android:layout_marginStart="5sp"
                            android:id="@+id/text5"
                            android:textSize="10sp"
                            android:layout_below="@+id/text4"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MRP RS 56"
                            android:layout_marginTop="5sp"
                            android:textSize="10sp"
                            android:layout_centerInParent="true"
                            android:textStyle="bold"
                            android:layout_below="@+id/text5"
                            android:id="@+id/quantity"
                            />
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="20sp"
                            android:textColor="#fff"
                            android:background="@drawable/custom_button"
                            android:textStyle="bold"
                            android:text="Buy"
                            android:layout_centerInParent="true"
                            android:id="@+id/buys"
                            android:layout_marginTop="15sp"
                            android:textSize="10sp"
                            android:layout_below="@+id/quantity"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="SUBSCRIBE"
                            android:textColor="#D71449"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:layout_centerInParent="true"
                            android:layout_below="@+id/buys"
                            android:layout_marginTop="15sp"/>




                    </RelativeLayout>
                </androidx.cardview.widget.CardView>











            </LinearLayout>




        </LinearLayout>


    </ScrollView>

</RelativeLayout>