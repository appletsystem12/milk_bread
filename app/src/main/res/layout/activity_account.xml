<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relative"
    android:orientation="vertical"
  >

   <include layout="@layout/toolbar"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10sp"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="192dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Setting"
                    android:textAlignment="viewEnd"
                    android:textAllCaps="true"
                    android:textColor="#FF8700"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Account"
                    android:layout_weight="1"
                    android:layout_marginLeft="15sp"
                    android:textAllCaps="true"
                    android:textAlignment="textStart"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#d71449"
                    />



            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Photo (130*130)"
                android:layout_marginLeft="20sp"
                android:textStyle="bold"
                android:textColor="#C8D0D8"

                />

                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/image"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15sp"
                    android:layout_marginLeft="20sp"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="file"
                        android:background="#d71449"
                        android:textSize="20sp"
                        android:textColor="#fff"
                        />
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Upload one/more files"
                        android:layout_marginLeft="15sp"
                        android:inputType="none"
                        android:textStyle="bold"
                        android:textColor="#abc"
                        android:gravity="center"
                        />



                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="15sp"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    >

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="First Name"
                        android:gravity="center"
                        android:padding="25sp"
                        android:id="@+id/first"
                        android:textStyle="bold"
                        android:inputType="number"
                        android:textSize="20sp"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="15sp"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    >

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Last Name"
                        android:gravity="center"
                        android:padding="25sp"
                        android:id="@+id/last"
                        android:textStyle="bold"
                        android:inputType="number"
                        android:textSize="20sp"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="15sp"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    >

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Address"
                        android:gravity="center"
                        android:padding="25sp"
                        android:id="@+id/Address"
                        android:textStyle="bold"
                        android:inputType="number"
                        android:textSize="20sp"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email id"
                    android:gravity="center"
                    android:padding="25sp"
                    android:id="@+id/Email"
                    android:textStyle="bold"

                    android:textSize="20sp"
                    />



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mobile Number"
                    android:gravity="center"
                    android:padding="25sp"
                    android:id="@+id/Enter_number"
                    android:textStyle="bold"
                    android:inputType="number"
                    android:textSize="20sp"
                    />

                <Button
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/Generate"
                    android:layout_below="@+id/submit"
                    android:layout_gravity="center"
                    android:text="Submit"
                    android:textColor="#FCFDFF"
                    android:background="@drawable/custom_button"
                    android:padding="25sp"
                    android:textSize="20sp"
                    android:layout_marginTop="55sp"
                    android:layout_marginBottom="50sp"
                    />
            </LinearLayout>
    </ScrollView>
    </LinearLayout>


</LinearLayout>