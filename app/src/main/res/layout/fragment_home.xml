<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ViewFlipper
                    android:layout_width="match_parent"
                    android:layout_height="250sp"
                    android:id="@+id/v_flipper"
                    android:autoStart="true"
                    android:layout_gravity="center"
                    android:flipInterval="3000">

                    <ImageView
                        android:id="@+id/slide1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/slide2"
                        android:contentDescription="@string/desc" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="350sp"
                        android:id="@+id/slide2"
                        android:contentDescription="@string/desc"
                        android:background="@drawable/slide3"/>
                </ViewFlipper>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25sp"
                    android:text="@string/find_products"
                    android:textColor="#D71147"
                    android:id="@+id/findproducts"
                    android:background="#FAFBFB"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="25sp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:weightSum="3"
                    android:orientation="horizontal">
                    <Button
                        android:layout_width="105sp"
                        android:layout_height="140sp"
                        android:layout_weight="1"
                        android:layout_marginEnd="10sp"
                        android:id="@+id/promo"
                        android:background="@drawable/bestpromo"/>

                    <Button
                        android:layout_width="105sp"
                        android:layout_height="140sp"
                        android:layout_weight="1"
                        android:layout_marginEnd="10sp"
                        android:id="@+id/selling"
                        android:background="@drawable/bestselling"/>
                    <Button
                        android:layout_width="105sp"
                        android:layout_height="140sp"
                        android:layout_weight="1"
                        android:layout_marginEnd="10sp"
                        android:id="@+id/fruits"
                        android:background="@drawable/fruit"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10sp"
                    android:weightSum="3">

                    <Button
                        android:id="@+id/newpdt"
                        android:layout_width="105sp"
                        android:layout_height="140sp"
                        android:layout_marginEnd="10sp"
                        android:layout_weight="1"
                        android:background="@drawable/newproduct" />

                    <Button
                        android:id="@+id/vegetables"
                        android:layout_width="105sp"
                        android:layout_height="140sp"
                        android:layout_marginEnd="10sp"
                        android:layout_weight="1"
                        android:background="@drawable/vegetables" />

                    <Button
                        android:id="@+id/fastfood"
                        android:layout_width="105sp"
                        android:layout_height="140sp"
                        android:layout_marginEnd="10sp"
                        android:layout_weight="1"
                        android:background="@drawable/fastfood" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:text="@string/Popular_Search"
                    android:textColor="#D71147"
                    android:id="@+id/Search"
                    android:background="#FAFBFB"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="25sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:layout_marginTop="25sp"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:id="@+id/Cabbage"
                        android:text="Cabbage"
                        android:layout_marginStart="10sp"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:textColor="#fff"
                        android:onClick="onClick"
                        android:background="@drawable/custom_button"
                        />
                    <Button
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:id="@+id/broccoli"
                        android:text="Broccoli"
                        android:textStyle="bold"
                        android:layout_marginStart="5sp"
                        android:layout_weight="1"
                        android:onClick="onClick"
                        android:textColor="#fff"
                        android:background="@drawable/custom_button"
                        />
                    <Button
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:id="@+id/Carrot"
                        android:text="Carrot"
                        android:textStyle="bold"
                        android:layout_marginStart="5sp"
                        android:layout_marginEnd="10sp"
                        android:layout_weight="1"
                        android:onClick="onClick"
                        android:textColor="#fff"
                        android:background="@drawable/custom_button"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:layout_marginTop="25sp"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:id="@+id/Potato"
                        android:text="Potato"
                        android:textStyle="bold"
                        android:layout_marginStart="10sp"
                        android:layout_weight="1"
                        android:onClick="onClick"
                        android:textColor="#fff"
                        android:background="@drawable/custom_button"
                        />
                    <Button
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:id="@+id/Rice"
                        android:text="Rice"
                        android:textStyle="bold"
                        android:layout_marginStart="5sp"
                        android:layout_weight="1"
                        android:textColor="#fff"
                        android:onClick="onClick"
                        android:background="@drawable/custom_button"
                        />
                    <Button
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:id="@+id/Salad"
                        android:text="Salad"
                        android:textStyle="bold"
                        android:onClick="onClick"
                        android:layout_marginStart="5sp"
                        android:layout_marginEnd="10sp"
                        android:layout_weight="1"
                        android:textColor="#fff"
                        android:background="@drawable/custom_button"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35sp"
                    android:text="Categories"
                    android:textColor="#D71147"
                    android:id="@+id/Featured"
                    android:background="#FAFBFB"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="25sp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5sp"
                    android:weightSum="3"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal">
                    <Button
                        android:layout_width="105sp"
                        android:layout_height="140sp"
                        android:layout_weight="1"
                        android:layout_marginStart="10sp"
                        android:id="@+id/milk"
                        android:background="@drawable/milks"/>

                    <Button
                        android:layout_width="105sp"
                        android:layout_height="140sp"
                        android:layout_weight="1"
                        android:id="@+id/vegetable"
                        android:onClick="onClick"
                        android:layout_marginStart="10sp"
                        android:background="@drawable/vegetable"/>
                    <Button
                        android:layout_width="105sp"
                        android:layout_height="140sp"
                        android:layout_weight="1"
                        android:layout_marginStart="10sp"
                        android:layout_marginEnd="10sp"
                        android:id="@+id/fruit"
                        android:onClick="onClick"
                        android:background="@drawable/fruits"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <Button
                        android:layout_width="105sp"
                        android:layout_height="140sp"
                        android:layout_weight="1"
                        android:layout_marginStart="10sp"
                        android:id="@+id/egg"
                        android:onClick="onClick"
                        android:background="@drawable/egg"/>

                    <Button
                        android:layout_width="105sp"
                        android:layout_height="140sp"
                        android:id="@+id/beverage"
                        android:layout_marginStart="10sp"
                        android:layout_weight="1"
                        android:onClick="onClick"
                        android:background="@drawable/beverages"/>
                    <Button
                        android:layout_width="105sp"
                        android:layout_height="140sp"
                        android:id="@+id/breakfast"
                        android:layout_marginStart="10sp"
                        android:layout_marginEnd="10sp"
                        android:layout_weight="1"
                        android:onClick="onClick"
                        android:background="@drawable/snacks"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <Button
                        android:layout_width="105sp"
                        android:layout_height="140sp"
                        android:layout_marginStart="10sp"
                        android:layout_weight="1"
                        android:onClick="onClick"
                        android:id="@+id/oil"
                        android:background="@drawable/foodgrain"/>

                    <Button
                        android:layout_width="105sp"
                        android:layout_height="140sp"
                        android:id="@+id/pooja"
                        android:layout_weight="1"
                        android:onClick="onClick"
                        android:layout_marginStart="10sp"
                        android:background="@drawable/pooja"/>
                    <Button
                        android:layout_width="105sp"
                        android:layout_height="140sp"
                        android:id="@+id/baby"
                        android:onClick="onClick"
                        android:layout_marginStart="10sp"
                        android:layout_marginEnd="10sp"
                        android:layout_weight="1"
                        android:background="@drawable/baby"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <Button
                        android:layout_width="105sp"
                        android:layout_height="140sp"
                        android:layout_marginStart="10sp"
                        android:layout_weight="1"
                        android:onClick="onClick"
                        android:id="@+id/beauty"
                        android:background="@drawable/beauty"/>

                    <Button
                        android:layout_width="105sp"
                        android:layout_height="140sp"
                        android:id="@+id/clean"
                        android:layout_weight="1"
                        android:onClick="onClick"
                        android:layout_marginStart="10sp"
                        android:background="@drawable/cleaning"/>
                    <Button
                        android:layout_width="105sp"
                        android:layout_height="140sp"
                        android:id="@+id/petcare"
                        android:onClick="onClick"
                        android:layout_marginStart="10sp"
                        android:layout_marginEnd="10sp"
                        android:layout_weight="1"
                        android:background="@drawable/petcare"/>
                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>